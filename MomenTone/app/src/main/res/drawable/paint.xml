<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <stroke
                android:width="4dp"
                android:color="#FF999999" />
            <solid android:color="#00000000" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    <!-- two layed shaped drawables-->
    <item>
        <shape  android:shape="oval">
            <stroke
                android:width="50dp"
                android:color="#FF999999" />
            <solid android:color="#00000000" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>
